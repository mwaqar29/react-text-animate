{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["src/**/*", "rollup.config.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
